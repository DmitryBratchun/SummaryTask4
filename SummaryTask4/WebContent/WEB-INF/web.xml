<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
version="4.0">
  <display-name>SummaryTask4</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  
<!--============================================================
	Encoding support filter
=============================================================-->
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>ua.nure.bratchun.SummaryTask4.web.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/WEB-INF/jsp/*</url-pattern>
		<servlet-name>Controller</servlet-name>
	</filter-mapping>

	
<!--============================================================
	Security filter.
	1) admin: admin commands
	2) client: client commands
	3) commons: commands for all roles
	4) out-of-control: commands without access control
	Delimiter - space/tab
=============================================================-->
 
	<filter>
		<filter-name>CommandAccessFilter</filter-name>
		<filter-class>ua.nure.bratchun.SummaryTask4.web.filter.CommandAccessFilter</filter-class>
		<init-param>
			<param-name>admin</param-name>
			<param-value>viewAdminPage editFaculty addFaculty editSubjects addSubject viewStatement addToStatement fileStatement blockEntrant viewBlockedEntrants unblockEntrant</param-value>
		</init-param>
		<init-param>
			<param-name>client</param-name>
			<param-value>viewClientPage entryFaculty</param-value>
		</init-param>
		<init-param>
			<param-name>common</param-name>
			<param-value>logout noCommand userSettings viewAllFaculties viewFaculty</param-value>
		</init-param>
		<init-param>
			<param-name>out-of-control</param-name>
			<param-value>login registration viewErrorPage</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>CommandAccessFilter</filter-name>
		<servlet-name>Controller</servlet-name>
	</filter-mapping>
  
<!--============================================================
	Controller
=============================================================-->
	<servlet>
		<servlet-name>Controller</servlet-name>
		<servlet-class>ua.nure.bratchun.SummaryTask4.web.Controller</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/controller</url-pattern>
	</servlet-mapping>
<!--============================================================
	Context listener
=============================================================-->
  <listener>
	<listener-class>ua.nure.bratchun.SummaryTask4.web.listener.ContextListener</listener-class> 
   </listener>
</web-app>